.videoNav {
  display: flex;
  white-space: nowrap; /*必须要有当前的属性*/
  height: 60rpx;
  margin: 20rpx 0;
}


.videoNav .navItem {
  /*width: 200rpx;*/
  margin-left: 50rpx;
  max-width: 200rpx; /*最大宽度*/
}




.videoNav .navItem.active {
  border-bottom: 1rpx solid #d43c33;
}


.videoNav .navItem>view {
  height: 40rpx;
  font-size: 32rpx;
}
