.videoHeader {
  display: flex;
  height: 60rpx;
  padding: 10rpx;
}


.videoHeader image {
  width: 60rpx;
  height: 60rpx;
}


.videoHeader .search {
  border: 1rpx solid #eee;
  flex: 1; /*设置当前元素所占比重*/
  margin: 0 20rpx;
  border-radius: 10rpx;
  height: 100%;
}
.videoHeader .search input {
  width: 100%;
  height:100%;
}

.videoHeader .search .placeholder{
  text-align: center;
}



