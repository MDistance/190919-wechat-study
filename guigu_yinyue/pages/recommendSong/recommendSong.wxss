.recommendSongContainer .header {
  position: relative;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 300rpx;
}


.recommendSongContainer .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -100rpx;
  margin-top: -50rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;

}
.recommendSongContainer .date .day {
  font-size: 40rpx;
}
