.indexContainer .navSwiper {
  width: 100%;
  height: 300rpx;
}

.indexContainer .navSwiper image {
  width: 100%;
  height: 300rpx;
}


/* 导航区域 */
.navContainer {
  display: flex;
}

.navContainer .navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navContainer .navItem .iconfont {
  font-size: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  margin: 20rpx 0;
}

.navContainer .navItem text {
  font-size: 26rpx;
}



/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}
.header {
  margin-bottom: 20rpx;
}

.header .title{
  font-size: 26rpx;
  color: #666;
}

.header .navContent {
  height: 50rpx;
  line-height: 50rpx;
}

.header .navContent .nav{
  font-size: 30rpx;
  color: #000;
}

.header .navContent .more {
  float: right;
  border: 1rpx solid #333;
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 0 20rpx;
}



/* 滑动区域 scroll */
.scrollBar {
  display: flex;
}

.scrollBar .scrollItem {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollBar .scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}


.scrollBar .scrollItem text {
  font-size: 26rpx;
  line-height: 40rpx;
  /*white-space: nowrap;*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;  /*webkit盒模型*/
  -webkit-line-clamp:2;  /*控制行数*/
  -webkit-box-orient: vertical;  /*规定框的子元素应该被水平或垂直排列。*/
}











