<view class="indexContainer">
  <swiper
      class="navSwiper"
      indicator-dots
      indicator-active-color='#d43c33'
      indicator-color='ivory'
      autoplay
      circular
  >
    <swiper-item wx:for="{{bannersList}}" wx:key="{{index}}">
      <image src="{{item.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 导航区域 -->
  <view class="navContainer">
    <view class="navItem">
      <text class="iconfont icon-meirituijian-"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲 -->
  <view class="recommendContainer">
    <!-- 头部组件 -->
    <Nav-Header title="推荐歌曲" nav="为你精心推荐"></Nav-Header>

    <scroll-view class="scrollBar" enable-flex="true" scroll-x>
      <view class="scrollItem" wx:for="{{recommendList}}" wx:key="{{index}}">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>
  </view>


  <!-- 排行榜 -->
  <view class="topList">
    <Nav-Header title="排行榜" nav="热歌风向标"></Nav-Header>

    <!-- 列表内容 -->
    <swiper class="topListSwiper" next-margin="50rpx">
      <swiper-item class="swiperItem">
        <view class="swiperContent">
          <text class="title">云音乐新歌榜 > </text>
          <view class="musicContent">
            <image src="/static/images/nvsheng.jpg"></image>
